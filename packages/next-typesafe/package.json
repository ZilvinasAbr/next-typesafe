{
  "name": "next-typesafe",
  "version": "0.2.0",
  "description": "Next.js library to bring full type-safety to Next.js",
  "main": "dist/createPage.js",
  "types": "dist/createPage.d.ts",
  "exports": {
    ".": {
      "types": "./dist/createPage.d.ts",
      "import": "./dist/createPage.js",
      "require": "./dist/createPage.js"
    }
  },
  "bin": {
    "next-typesafe": "bin/cli.js"
  },
  "files": [
    "dist",
    "bin"
  ],
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "pnpm run build",
    "lint": "eslint . --max-warnings 0",
    "check-types": "tsc --noEmit",
    "test": "node --require tsx/cjs src/__tests__/*.test.ts",
    "release": "semantic-release"
  },
  "keywords": [
    "nextjs",
    "typescript",
    "type-safe",
    "validation",
    "params",
    "search-params"
  ],
  "author": "Žilvinas Abromavičius",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ZilvinasAbr/next-typesafe.git",
    "directory": "packages/next-typesafe"
  },
  "homepage": "https://github.com/ZilvinasAbr/next-typesafe#readme",
  "bugs": {
    "url": "https://github.com/ZilvinasAbr/next-typesafe/issues"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "zod": "^3.0.0 || ^4.0.0"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "@types/node": "^22.15.3",
    "@types/react": "19.1.0",
    "@types/react-dom": "19.1.1",
    "eslint": "^9.33.0",
    "react": "^19.1.0",
    "semantic-release": "24.2.7",
    "tsx": "^4.19.2",
    "typescript": "5.9.2",
    "zod": "4.0.17"
  }
}
